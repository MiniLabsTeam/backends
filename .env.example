# Server Configuration
NODE_ENV=development
PORT=3000
HOST=localhost

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/onechain_racing?schema=public

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRES_IN=30d

# OneChain Blockchain Configuration
ONECHAIN_RPC_URL=https://rpc-testnet.onelabs.cc:443
ONECHAIN_WSS_URL=wss://wss.onechain.network
PACKAGE_ID=0x6464f5548466c1b01f2ce008ea14807540e15c5c68df1af17a208524c2ba17a6

# Backend Admin Wallet (untuk signing transactions)
BACKEND_PRIVATE_KEY=your-backend-private-key-hex
BACKEND_PUBLIC_KEY=your-backend-public-key-hex
BACKEND_ADDRESS=0x4482a362abba1279a198816e7f914414ceb5642f329d06468e76f4d8ef09ea15

# Treasury Address (untuk menerima fees)
TREASURY_ADDRESS=0x4482a362abba1279a198816e7f914414ceb5642f329d06468e76f4d8ef09ea15

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3001,http://localhost:3000
CORS_CREDENTIALS=true

# WebSocket
WS_PORT=3001
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=5000

# Game Configuration
GAME_TICK_RATE=60
GAME_MAX_PLAYERS=8
GAME_MIN_PLAYERS=2
GAME_ROOM_TIMEOUT=300000

# Gacha Configuration
GACHA_TIER_1_PRICE=1000000
GACHA_TIER_2_PRICE=5000000
GACHA_TIER_3_PRICE=10000000
GACHA_MAX_DISCOUNT_PERCENT=50

# Marketplace Configuration
MARKETPLACE_FEE_BPS=250
MARKETPLACE_ROYALTY_BPS=250

# Quest Configuration
QUEST_RESET_CRON=0 0 * * *

# RWA (Physical Claim) Configuration
RWA_FULFILLMENT_WEBHOOK_URL=https://api.yourfulfillment.com/webhook
RWA_REQUIRED_PARTS=4

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# Indexer Configuration
INDEXER_START_CHECKPOINT=0
INDEXER_BATCH_SIZE=100
INDEXER_POLL_INTERVAL=5000

# External APIs
SHIPMENT_TRACKING_API_KEY=
SHIPMENT_TRACKING_API_URL=

# Security
BCRYPT_ROUNDS=12
NONCE_EXPIRY_MS=300000
SIGNATURE_EXPIRY_MS=300000

# Monitoring (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Email (optional - untuk RWA notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@onechain-racing.com
