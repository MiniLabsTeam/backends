{
  "name": "onechain-racing-backend",
  "version": "1.0.0",
  "description": "OneChain Racing Game Backend - Node.js + TypeScript + PostgreSQL + Redis",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon --exec ts-node --transpile-only src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "jest",
    "migrate": "npx prisma migrate dev",
    "migrate:deploy": "npx prisma migrate deploy",
    "prisma:generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "indexer": "ts-node src/indexer/index.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "keywords": [
    "onechain",
    "racing",
    "game",
    "blockchain",
    "nft",
    "web3"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "express": "^4.19.2",
    "dotenv": "^16.4.5",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "bcrypt": "^5.1.1",
    "redis": "^4.7.0",
    "ioredis": "^5.4.1",
    "ws": "^8.18.0",
    "socket.io": "^4.7.5",
    "joi": "^17.13.3",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "winston": "^3.14.2",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "multer": "^1.4.5-lts.1",
    "axios": "^1.7.7",
    "uuid": "^10.0.0",
    "tweetnacl": "^1.0.3",
    "@noble/ed25519": "^2.1.0",
    "@mysten/sui.js": "^0.54.1",
    "bignumber.js": "^9.1.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.5",
    "@types/cors": "^2.8.17",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/bcrypt": "^5.0.2",
    "@types/ws": "^8.5.12",
    "@types/morgan": "^1.9.9",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/multer": "^1.4.12",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.6.2",
    "ts-node": "^10.9.2",
    "nodemon": "^3.1.4",
    "prisma": "^5.20.0",
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^9.10.0",
    "prettier": "^3.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.13",
    "ts-jest": "^29.2.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
